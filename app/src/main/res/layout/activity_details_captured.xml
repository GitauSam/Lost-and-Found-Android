<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_black"
            android:text="@string/activity_details_captured_tv_details_captured"
            android:layout_marginBottom="4dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/lato"
            android:text="@string/activity_details_captured_tv_additional_details"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/activity_details_captured_iv_captured_details_description"
            android:fitsSystemWindows="true"
            android:padding="4dp"
            android:backgroundTint="#252525"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:padding="8dp">

            <TextView
                android:id="@+id/text_view_static_name"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/lato"
                android:padding="5dp"
                android:text="@string/activity_details_captured_tv_lbl_name"
                android:textAlignment="viewEnd"
                android:textColor="@color/blue"
                android:textSize="13sp"
                android:gravity="end" />

            <TextView
                android:id="@+id/text_view_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_view_static_name"
                android:fontFamily="@font/lato"
                android:padding="5dp"
                android:text=""
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_view_static_gender"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_static_name"
                android:fontFamily="@font/lato"
                android:padding="5dp"
                android:text="@string/activity_details_captured_tv_lbl_sex"
                android:textAlignment="viewEnd"
                android:textColor="@color/blue"
                android:textSize="13sp"
                android:gravity="end" />

            <TextView
                android:id="@+id/text_view_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_full_name"
                android:layout_toRightOf="@+id/text_view_static_gender"
                android:fontFamily="@font/lato"
                android:padding="5dp"
                android:text=""
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_view_static_age"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_static_gender"
                android:fontFamily="@font/lato"
                android:padding="5dp"
                android:text="@string/activity_details_captured_tv_lbl_age"
                android:textAlignment="viewEnd"
                android:textColor="@color/blue"
                android:textSize="13sp"
                android:gravity="end" />

            <TextView
                android:id="@+id/text_view_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_gender"
                android:layout_toRightOf="@+id/text_view_static_age"
                android:fontFamily="@font/lato"
                android:padding="5dp"
                android:text=""
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_view_static_document"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_static_age"
                android:fontFamily="@font/lato"
                android:padding="5dp"
                android:text="@string/activity_details_captured_tv_lbl_document"
                android:textAlignment="viewEnd"
                android:textColor="@color/blue"
                android:textSize="13sp"
                android:gravity="end" />

            <TextView
                android:id="@+id/text_view_document"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_age"
                android:layout_toRightOf="@+id/text_view_static_document"
                android:fontFamily="@font/lato"
                android:padding="5dp"
                android:text=""
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_view_static_poi"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_static_document"
                android:fontFamily="@font/lato"
                android:padding="5dp"
                android:text="@string/activity_details_captured_tv_lbl_place_of_issue"
                android:textAlignment="viewEnd"
                android:textColor="@color/blue"
                android:textSize="13sp"
                android:gravity="end" />

            <TextView
                android:id="@+id/text_view_poi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_document"
                android:layout_toRightOf="@+id/text_view_static_poi"
                android:fontFamily="@font/lato"
                android:padding="5dp"
                android:text=""
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_view_static_phone_no"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_static_poi"
                android:fontFamily="@font/lato"
                android:gravity="end"
                android:padding="5dp"
                android:text="@string/activity_details_captured_tv_lbl_phone_no"
                android:textAlignment="viewEnd"
                android:textColor="@color/blue"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_view_dynamic_phone_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_poi"
                android:layout_toRightOf="@+id/text_view_static_phone_no"
                android:fontFamily="@font/lato"
                android:padding="5dp"
                android:text=""
                android:textSize="13sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/darkgreen"
                android:fontFamily="@font/lato"
                android:text="@string/activity_details_captured_bt_lbl_retry"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:fontFamily="@font/lato"
                android:text="@string/activity_details_captured_bt_lbl_next"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>